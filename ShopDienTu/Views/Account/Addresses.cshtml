@model List<ShopDienTu.Models.UserAddress>
@{
    ViewData["Title"] = "Sổ địa chỉ";
}

<div class="container py-4">
    <h2 class="mb-4"><i class="fas fa-map-marker-alt me-2"></i> Sổ địa chỉ</h2>

    @if (Model.Count == 0)
    {
        <p>Bạn chưa có địa chỉ nào được lưu.</p>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>Địa chỉ</th>
                    <th>Ngày thêm</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var address in Model)
                {
                    <tr>
                        <td>@address.Address</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
