@model ShopDienTu.Models.Promotion

@{
    ViewData["Title"] = "Tạo Khuyến mãi mới"; // Tiêu đề tiếng Việt
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h4>Thông tin Khuyến mãi</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        @* Tăng độ rộng *@
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                @* Thêm margin bottom *@
                <label asp-for="PromotionName" class="control-label"></label>
                <input asp-for="PromotionName" class="form-control" />
                <span asp-validation-for="PromotionName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProductID" class="control-label"></label>
                @* Sử dụng ViewBag đã chuẩn bị ở Controller *@
                <select asp-for="ProductID" class="form-control" asp-items="ViewBag.ProductID"></select>
                <span asp-validation-for="ProductID" class="text-danger"></span> @* Validation cho ProductID nếu cần *@
            </div>

            <div class="form-group mb-3">
                <label asp-for="PromoCode" class="control-label"></label>
                <input asp-for="PromoCode" class="form-control" />
                <span asp-validation-for="PromoCode" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DiscountPercentage" class="control-label"></label>
                <div class="input-group">
                    @* Thêm input group để hiển thị % *@
                    <input asp-for="DiscountPercentage" class="form-control" type="number" step="0.01" min="0.01" max="100" />
                    <span class="input-group-text">%</span>
                </div>
                <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control" type="datetime-local" /> @* Dùng datetime-local *@
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" class="form-control" type="datetime-local" /> @* Dùng datetime-local *@
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IsActive" class="control-label"></label>
                <select asp-for="IsActive" class="form-control" asp-items="ViewBag.IsActiveStatus"></select>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>


            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea> @* Dùng textarea *@
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                @* Tăng margin top *@
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại Danh sách</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Có thể thêm script để validate ngày tháng phía client nếu cần
        // Ví dụ: Kiểm tra EndDate > StartDate
    </script>
}