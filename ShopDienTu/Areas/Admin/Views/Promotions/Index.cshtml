@model IEnumerable<ShopDienTu.Models.Promotion>
@{
    ViewData["Title"] = "Danh sách chương trình khuyến mãi";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h1 class="mt-4">Danh sách chương trình khuyến mãi</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Bảng điều khiển</a></li>
        <li class="breadcrumb-item active">Khuyến mãi</li>
    </ol>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-list mr-1"></i>
            Danh sách
            <a asp-action="Create" class="btn btn-primary float-right">
                <i class="fas fa-plus"></i> Thêm mới
            </a>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.PromotionName)</th>
                        <th>@Html.DisplayNameFor(model => model.DiscountPercentage)</th>
                        <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                        <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                        <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                        <th>@Html.DisplayNameFor(model => model.PromoCode)</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.PromotionName)</td>
                            <td>@Html.DisplayFor(modelItem => item.DiscountPercentage)%</td>
                            <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                            <td>@Html.DisplayFor(modelItem => item.PromoCode)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.PromotionID" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.PromotionID" class="btn btn-info btn-sm">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.PromotionID" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>