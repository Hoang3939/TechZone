<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a class="brand-link">
        <img src="~/dist/img/AdminLTELogo.png" alt="Admin Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">Admin</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="info">
                <a href="#" class="d-block" style="color:white">
                    @Context.Session.GetString("UserEmail")
                </a>
            </div>
        </div>

        <!-- SidebarSearch Form -->
        <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fas fa-search fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                     with font-awesome or any other icon font library -->
                <li class="nav-item ">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="nav-link ">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>
                            Dashboard

                        </p>
                    </a>

                </li>
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-th"></i>
                        <p>
                            Quản lý danh mục

                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="SubCategories" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-th"></i>
                        <p>
                            Quản lý danh mục phụ

                        </p>
                    </a>
                </li>
                
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="AdminProducts" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-copy"></i>
                        <p>
                            Quản lý sản phẩm


                        </p>
                    </a>

                </li>
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="ProductImages" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-chart-pie"></i>
                        <p>
                            Quản lý danh mục ảnh 

                        </p>
                    </a>

                </li>
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-tree"></i>
                        <p>
                            Quản lý đơn hàng

                        </p>
                    </a>

                </li>

                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="PaymentMethods" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-table"></i>
                        <p>
                            Quản lý phương thức thanh toán

                        </p>
                    </a>

                </li>
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Promotions" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-th"></i>
                        <p>
                            Quản lý Chương trình khuyến mãi

                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="AdminUsers" asp-action="Index" class="nav-link">
                        <i class="nav-icon fas fa-copy"></i>
                        <p>
                            Quản lý tài khoản


                        </p>
                    </a>

                </li>

            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>