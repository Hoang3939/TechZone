@model ShopDienTu.Models.Order
@{
    ViewData["Title"] = "Xóa đơn hàng";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h1 class="mt-4">Xóa đơn hàng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Bảng điều khiển</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Đơn hàng</a></li>
        <li class="breadcrumb-item active">Xóa</li>
    </ol>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-exclamation-triangle mr-1"></i>
            Xác nhận xóa
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h5><i class="fas fa-exclamation-circle mr-1"></i> Bạn có chắc chắn muốn xóa đơn hàng này?</h5>
                <p>Thao tác này không thể hoàn tác và sẽ xóa cả chi tiết đơn hàng và lịch sử trạng thái.</p>
            </div>

            <dl class="row">
                <dt class="col-sm-3">Mã đơn hàng</dt>
                <dd class="col-sm-9">@Model.OrderNumber</dd>

                <dt class="col-sm-3">Khách hàng</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Tổng tiền</dt>
                <dd class="col-sm-9">@Model.TotalAmount?.ToString("N0") VNĐ</dd>

                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">
                    @switch (Model.OrderStatus)
                    {
                        case "Chờ xác nhận":
                            <span class="badge badge-warning">@Model.OrderStatus</span>
                            break;
                        case "Đang xử lý":
                            <span class="badge badge-info">@Model.OrderStatus</span>
                            break;
                        case "Đang giao":
                            <span class="badge badge-primary">@Model.OrderStatus</span>
                            break;
                        case "Hoàn thành":
                            <span class="badge badge-success">@Model.OrderStatus</span>
                            break;
                        case "Hủy":
                            <span class="badge badge-danger">@Model.OrderStatus</span>
                            break;
                        default:
                            <span class="badge badge-secondary">@Model.OrderStatus</span>
                            break;
                    }
                </dd>

                <dt class="col-sm-3">Ngày tạo</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="OrderID" />
                <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa đơn hàng này?');">
                    <i class="fas fa-trash mr-1"></i> Xác nhận xóa
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left mr-1"></i> Quay lại
                </a>
            </form>
        </div>
    </div>
</div>