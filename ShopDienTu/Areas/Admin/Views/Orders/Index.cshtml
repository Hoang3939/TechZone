@model IEnumerable<ShopDienTu.Models.Order>
@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h1 class="mt-4">Quản lý đơn hàng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Bảng điều khiển</a></li>
        <li class="breadcrumb-item active">Đơn hàng</li>
    </ol>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-list mr-1"></i>
            Danh sách đơn hàng
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <form method="get" action="@Url.Action("Index")">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Tìm mã đơn, tên, email..." name="searchString" value="@ViewBag.SearchString">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-6">
                    <form method="get" action="@Url.Action("Index")">
                        <div class="input-group">
                            <select class="form-control" name="statusFilter">
                                @foreach (var status in ViewBag.StatusList)
                                {
                                    <option value="@status" selected="@(ViewBag.StatusFilter == status)">@status</option>
                                }
                            </select>
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">Lọc</button>
                            </div>
                            <input type="hidden" name="searchString" value="@ViewBag.SearchString" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="ordersTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã đơn hàng</th>
                            <th>Khách hàng</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th>Ngày tạo</th>
                            <th style="width: 150px;" class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.OrderNumber</td>
                                <td>@(item.User?.FullName ?? "Khách vãng lai")</td>
                                <td>@item.TotalAmount?.ToString("N0")</td>
                                <td>
                                    @switch (item.OrderStatus)
                                    {
                                        case "Chờ xác nhận":
                                            <span class="badge badge-warning">@item.OrderStatus</span>
                                            break;
                                        case "Đang xử lý":
                                            <span class="badge badge-info">@item.OrderStatus</span>
                                            break;
                                        case "Đang giao":
                                            <span class="badge badge-primary">@item.OrderStatus</span>
                                            break;
                                        case "Hoàn thành":
                                            <span class="badge badge-success">@item.OrderStatus</span>
                                            break;
                                        case "Hủy":
                                            <span class="badge badge-danger">@item.OrderStatus</span>
                                            break;
                                        default:
                                            <span class="badge badge-secondary">@item.OrderStatus</span>
                                            break;
                                    }
                                </td>
                                <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("Details", new { id = item.OrderID })" class="btn btn-warning" title="Chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = item.OrderID })" class="btn btn-info" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.OrderID })" class="btn btn-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#ordersTable').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Vietnamese.json"
                },
                "order": [[4, 'desc']]
            });
        });
    </script>
}