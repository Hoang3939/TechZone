@model ShopDienTu.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h1 class="mt-4">Chi tiết đơn hàng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Bảng điều khiển</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Đơn hàng</a></li>
        <li class="breadcrumb-item active">Chi tiết</li>
    </ol>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-info-circle mr-1"></i>
            Thông tin đơn hàng
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Mã đơn hàng</dt>
                <dd class="col-sm-9">@Model.OrderNumber</dd>

                <dt class="col-sm-3">Khách hàng</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Số điện thoại</dt>
                <dd class="col-sm-9">@Model.Phone</dd>

                <dt class="col-sm-3">Tổng tiền</dt>
                <dd class="col-sm-9">@Model.TotalAmount?.ToString("N0") VNĐ</dd>

                <dt class="col-sm-3">Giảm giá</dt>
                <dd class="col-sm-9">@(Model.Discount?.ToString("N0") ?? "0") VNĐ</dd>

                <dt class="col-sm-3">Phương thức thanh toán</dt>
                <dd class="col-sm-9">@(Model.PaymentMethod?.MethodName ?? "Không xác định")</dd>

                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">
                    @switch (Model.OrderStatus)
                    {
                        case "Chờ xác nhận":
                            <span class="badge badge-warning">@Model.OrderStatus</span>
                            break;
                        case "Đang xử lý":
                            <span class="badge badge-info">@Model.OrderStatus</span>
                            break;
                        case "Đang giao":
                            <span class="badge badge-primary">@Model.OrderStatus</span>
                            break;
                        case "Hoàn thành":
                            <span class="badge badge-success">@Model.OrderStatus</span>
                            break;
                        case "Hủy":
                            <span class="badge badge-danger">@Model.OrderStatus</span>
                            break;
                        default:
                            <span class="badge badge-secondary">@Model.OrderStatus</span>
                            break;
                    }
                </dd>

                <dt class="col-sm-3">Ngày tạo</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Ngày cập nhật</dt>
                <dd class="col-sm-9">@(Model.UpdatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa cập nhật")</dd>

                <dt class="col-sm-3">Địa chỉ giao hàng</dt>
                <dd class="col-sm-9">@Model.ShippingAddress</dd>

                <dt class="col-sm-3">Ghi chú</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Notes) ? "Không có" : Model.Notes)</dd>
            </dl>

            <h5 class="mt-4">Sản phẩm trong đơn hàng</h5>
            @if (Model.OrderDetails != null && Model.OrderDetails.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Đơn giá</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detail in Model.OrderDetails)
                            {
                                <tr>
                                    <td>@(detail.Product?.ProductName ?? "Không xác định")</td>
                                    <td>@detail.Quantity</td>
                                    <td>@detail.UnitPrice.ToString("N0") VNĐ</td>
                                    <td>@detail.TotalPrice.ToString("N0") VNĐ</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">Không có sản phẩm trong đơn hàng.</p>
            }

            <h5 class="mt-4">Lịch sử trạng thái</h5>
            @if (Model.OrderStatuses != null && Model.OrderStatuses.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Trạng thái</th>
                                <th>Mô tả</th>
                                <th>Thời gian</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var status in Model.OrderStatuses.OrderByDescending(s => s.CreatedAt))
                            {
                                <tr>
                                    <td>@status.Status</td>
                                    <td>@status.Description</td>
                                    <td>@status.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">Chưa có lịch sử trạng thái.</p>
            }

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.OrderID" class="btn btn-primary">
                    <i class="fas fa-edit mr-1"></i> Chỉnh sửa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left mr-1"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>